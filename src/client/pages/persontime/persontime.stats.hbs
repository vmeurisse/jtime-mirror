<div class="jtime-persontime-stats-block">
	<h3>Summary</h3>
	<dl>
		<dt>Days with report</dt>
		<dd>{{days}}</dd>
		<dt>Average report time/day</dt>
		<dd>{{average}}</dd>
		<dt>Total</dt>
		<dd>{{total}}</dd>
	</dl>
</div>

<div class="jtime-persontime-stats-block">
	<h3>Details ({{crs.length}})</h3>
	<dl class="colored">
	{{#each crs}}
		<dt class="bcolor{{color}}">{{epicName}}</dt>
		<dd>{{timeDisplay}}<dd>
	{{/each}}
	</dl>
</div>
